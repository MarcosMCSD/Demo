<div class="col-12 content-module" style="margin-bottom:2rem;" id="content-module-@ViewBag.RefModule">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title" style="text-transform:inherit !important;">Módulo conteúdo livre</h4>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="example-text-input" class="col-form-label">Título</label>
                        <input type="text" class="form-control" name="content-module-title-@ViewBag.RefModule" />
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label for="example-text-input" class="col-form-label">Descrição</label>
                        <textarea class="form-control" name="content-module-description-@ViewBag.RefModule" id="content-module-description-@ViewBag.RefModule"></textarea>                        
                    </div>
                </div>             
            </div>
        </div>
    </div>
</div>

<script>
    $(documnet).ready(function () {
        $('#content-module-description-@ViewBag.RefModule').summernote();
    });
</script>