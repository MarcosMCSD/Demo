@model VillaMouzinho.Web.Models.AttributesModel

@{
    Layout = "~/Views/Shared/_Layout-Backoffice.cshtml";
}

<div class="main-content-inner">
    @using (Html.BeginForm("UpdateAttribute", "Board", FormMethod.Post, new { role = "form", @id = "mainform" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-6 col-ml-12">
                <div class="row">
                    <!-- Textual inputs start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">@Model.Attribute.NAME</h4>
                                <p class="text-muted font-14 mb-4">Adicione novo atributo e os respectivos valores</p>
                                <div class="form-group">
                                    <label for="example-text-input" class="col-form-label">Nome</label>
                                    <input type="hidden" name="id" value="@Model.Attribute.ID" />
                                    <input class="form-control" type="text" required id="name" name="name" value="@Model.Attribute.NAME">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-ml-12">
                <div class="row">
                    <!-- basic form start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title" style="text-transform:inherit !important;">Valores do atributo</h4>
                                <div class="row">

                                    @{
                                        var i = 1;
                                    }

                                    @foreach (var item in Model.Attribute.attributes_values.ToList())
                                    {
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label for="example-text-input" class="col-form-label">Valor @i</label>
                                                <input type="hidden" name="idvalue@(i)" value="@item.ID" />
                                                <input class="form-control" required type="text" id="value@(i)" name="value@(i)" value="@item.VALUE">
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-group">
                                                <label for="example-text-input" class="col-form-label">Descrição @(i)</label>
                                                <input class="form-control" type="text" id="description@(i)" name="description@(i)" value="@item.DESCRIPTION">
                                            </div>
                                        </div>
                                        i++;
                                    }

                                    <div class="col-12 text-right" style="margin-top:1.5rem;">
                                        <button class="btn btn-primary">Gravar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                                        }
</div>
