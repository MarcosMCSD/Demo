@{
    Layout = "~/Views/Shared/_Layout-Backoffice.cshtml";
}

<!-- page title area end -->
<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-6 col-ml-12">
            <div class="row">
                <!-- Textual inputs start -->
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">@ViewBag.Title</h4>
                            <p class="text-muted font-14 mb-4">Edite atributo e os respectivos valores</p>
                            <div class="form-group">
                                <label for="example-text-input" class="col-form-label">Nome</label>
                                <input class="form-control" type="text" value="" id="example-text-input">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-ml-12">
            <div class="row">
                <!-- basic form start -->
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title" style="text-transform:inherit !important;">Editar valores do atributo</h4>
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-form-label">Valor 1</label>
                                        <input class="form-control" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-form-label">Descrição 1</label>
                                        <input class="form-control" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-form-label">Valor 2</label>
                                        <input class="form-control" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-form-label">Descrição 2</label>
                                        <input class="form-control" type="text" value="" id="example-text-input">
                                    </div>
                                </div>
                                <div class="col-12 text-right" style="margin-top:1.5rem;">
                                    <button class="btn btn-primary">Editar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


